---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Hero from '../components/Hero.astro'
import '../styles/style.css'
interface Props {
  lang: string
  title: string
  description: string
  canonical: string
}

const { lang, title, description, canonical } = Astro.props
const isEnglishPage = Astro.url.pathname.startsWith('/en/')
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>
      Marcos de Miguel. {title}
    </title>
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="author" content="Marcos de Miguel" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={`https://www.dragoncillos.com/${canonical}`} />
  </head>
  <body id="pageTop">
    <div class="skip-links">
      <div class="skip-links__content">
        <div class="skip-links__content__label">
          {isEnglishPage ? 'Skyp to' : 'Saltar a'}:
        </div>
        <ul role="list">
          <li>
            <a href="#navigation"
              ><span class="sr-only"
                >{isEnglishPage ? 'Skyp to' : 'Saltar a la'}</span
              >
              {
                isEnglishPage ? 'Principal Navigation' : 'Navegación Principal'
              }</a
            >
          </li>
          <li>
            <a href="#mainContent"
              ><span class="sr-only"
                >{isEnglishPage ? 'Skyp to ' : 'Saltar al'}</span
              >
              {isEnglishPage ? 'Main Content' : 'Contenido Principal'}</a
            >
          </li>
          <li>
            <a href="#footer"
              ><span class="sr-only"
                >{isEnglishPage ? 'Skyp to' : 'Saltar al'}</span
              >
              {isEnglishPage ? 'Footer' : 'Pie de Página'}</a
            >
          </li>
        </ul>
      </div>
    </div>
    <Header />
    <Hero />
    <main id="mainContent">
      <slot />
    </main>
    <Footer />
    <!-- Scripts -->
    <script src="../js/main.js"></script>
    <!-- Page-Specific Scripts Slot -->
    <slot name="scripts" />
  </body>
</html>
